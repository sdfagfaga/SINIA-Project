<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_style"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/ic_gallery"></ImageView>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rice"
                    android:textColor="@color/dark_black_color"
                    android:textSize="@dimen/text_18">

                </TextView>

                <TextView
                    android:id="@+id/txt_product_type"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_product_name"
                    android:text="(Sona masooor)">

                </TextView>

            </RelativeLayout>


            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="left"
                    android:layout_weight="1"
                    android:id="@+id/txt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textColor="@color/dark_black_color"
                    android:textSize="@dimen/text_13">

                </TextView>

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/grade"
                    android:textColor="@color/dark_black_color"
                    android:textSize="@dimen/text_13">

                </TextView>

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/dark_black_color"
                    android:textSize="@dimen/text_13">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txt_quantity"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_16">

                </TextView>

                <TextView
                    android:id="@+id/txt_grade"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_16">

                </TextView>

                <TextView
                    android:id="@+id/txt_price"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="$250"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_16">

                </TextView>

            </LinearLayout>

            <TextView
                android:fontFamily="@font/gelion_regular"
                android:id="@+id/txt_qunatity_type"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:gravity="center"
                android:text="Bags"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_12">

            </TextView>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>