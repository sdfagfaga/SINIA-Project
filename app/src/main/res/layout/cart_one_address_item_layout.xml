<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"

    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/squre_style"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_gallery">

        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/gelion_medium"
                    android:text="Rice"
                    android:textColor="@color/dark_black_color"
                    android:textSize="@dimen/text_20">

                </TextView>

                <TextView
                    android:id="@+id/txt_product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_product_name"
                    android:fontFamily="@font/gelion_thin"
                    android:gravity="center"
                    android:text="(Sona masooor)"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_16">

                </TextView>

                <TextView

                    android:id="@+id/txt_product_per_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/gelion_regular"
                    android:text="$ 50"
                    android:textColor="@color/dark_black_color"
                    android:textSize="@dimen/text_18">

                </TextView>

                <TextView
                    android:id="@+id/txt_qunatity_type_per_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_product_per_unit"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/gelion_thin"
                    android:gravity="center"
                    android:text="(Bags - 25kg"
                    android:textColor="@color/dark_black_color"
                    android:textSize="@dimen/text_14">

                </TextView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_product_type">

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/rel_sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gelion_regular"
                        android:gravity="center"
                        android:text="Qty"
                        android:textColor="@color/grey_color"
                        android:textSize="@dimen/text_16">

                    </TextView>

                    <LinearLayout
                        android:id="@+id/rel_sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/txt"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ic_minus_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_remove">

                        </ImageView>

                        <TextView
                            android:id="@+id/sp_qunatity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/spinner_style"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="100"
                            android:textColor="@color/dark_black_color"></TextView>

                        <ImageView
                            android:id="@+id/ic_add_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_plus">

                        </ImageView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_total_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/gelion_medium"
                        android:gravity="center"
                        android:text="$ 2500"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_18">

                    </TextView>

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/squre_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_color">


            <CheckBox
                android:id="@+id/item_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:checked="true">

            </CheckBox>

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_delete">

            </ImageView>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>