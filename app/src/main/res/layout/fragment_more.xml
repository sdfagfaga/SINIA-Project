<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/custom_action_bar_nosearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </include>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_left_details"
                android:fontFamily="@font/poppins_regular"
                android:padding="20dp"
                android:text="@string/terms_conditions"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_18">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color">

            </View>

            <TextView
                android:id="@+id/txt_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_left_details"
                android:fontFamily="@font/poppins_regular"
                android:padding="20dp"
                android:text="@string/faq"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_18">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color">

            </View>

            <TextView
                android:id="@+id/txt_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_left_details"
                android:fontFamily="@font/poppins_regular"
                android:padding="20dp"
                android:text="@string/help_desk"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_18">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color">

            </View>

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_left_details"
                android:fontFamily="@font/poppins_regular"
                android:padding="20dp"
                android:text="@string/email"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_18">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color">

            </View>


            <TextView
                android:id="@+id/txt_chat_on_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_left_details"
                android:fontFamily="@font/poppins_regular"
                android:padding="20dp"
                android:text="@string/chat_on_web"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_18"
                android:visibility="gone">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color"
                android:visibility="gone">

            </View>

            <TextView
                android:id="@+id/txt_news_letter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_left_details"
                android:fontFamily="@font/poppins_regular"
                android:padding="20dp"
                android:text="@string/news_letter"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_18">

            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color">

            </View>

            <TextView
                android:id="@+id/txt_donate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_left_details"
                android:fontFamily="@font/poppins_regular"
                android:padding="20dp"
                android:text="@string/donate"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_18"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color">

            </View>

            <TextView
                android:id="@+id/txt_stall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_left_details"
                android:fontFamily="@font/poppins_regular"
                android:padding="20dp"
                android:text="@string/stall_14"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_18"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color">

            </View>

            <TextView
                android:id="@+id/txt_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_left_details"
                android:fontFamily="@font/poppins_regular"
                android:padding="20dp"
                android:text="@string/check_update"
                android:textColor="@color/dark_black_color"
                android:textSize="@dimen/text_18"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color">

            </View>

            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:padding="20dp"
                android:text="@string/logout"
                android:textColor="@color/purple_color"
                android:textSize="@dimen/text_18">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color">

            </View>


        </LinearLayout>
    </LinearLayout>
</ScrollView>